<div class="dialog-content">
	{{#each content.i18n}}
		<div>
			<label class="checkbox" for="{{@key}}">
				<input type="checkbox" id="{{@key}}" name="{{@key}}" {{checked (lookup ../content.options @key)}}>
				{{this}}
			</label>
		</div>
	{{/each}}
	<div>
		<label class="text" for="explicitName">
			<input type="text" id="explicitName" name="explicitName" placeholder="{{content.targetActorName}}"
				value="{{content.targetActorName}}">
			{{localize "automated-polymorpher.polymorphExplicitName"}}
		</label>
	</div>
	{{#unless content.isToken}}
	<hr>
	<div>
		<label class="checkbox" for="transformTokens">
			<input type="checkbox" id="transformTokens" name="transformTokens"
				{{checked content.options.transformTokens}}>
			{{localize "automated-polymorpher.polymorphTokens"}}
		</label>
	</div>
	{{/unless}}
</div>
<div class="dialog-buttons">
    {{#each buttons as |button id|}}
    <button class="dialog-button" data-button="{{id}}">
        {{{button.icon}}}
        {{{button.label}}}
    </button>
    {{/each}}
</div>
